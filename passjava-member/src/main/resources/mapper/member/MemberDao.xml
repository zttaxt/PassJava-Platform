<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jackson0714.passjava.member.dao.MemberDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.jackson0714.passjava.member.entity.MemberEntity" id="memberMap">
        <result property="id" column="id"/>
        <result property="miniOpenid" column="mini_openid"/>
        <result property="mpOpenid" column="mp_openid"/>
        <result property="unionid" column="unionid"/>
        <result property="levelId" column="level_id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="nickname" column="nickname"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
        <result property="avatar" column="avatar"/>
        <result property="gender" column="gender"/>
        <result property="birth" column="birth"/>
        <result property="city" column="city"/>
        <result property="sourceType" column="source_type"/>
        <result property="integration" column="integration"/>
        <result property="registerTime" column="register_time"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="userId" column="user_id"/>
    </resultMap>

    <sql id="memberSql">
        ums_member.`id`,
		ums_member.`user_name`,
        ums_member.`user_id`,
        ums_member.`nickname`,
        ums_member.`phone`,
        ums_member.`gender`,
        ums_member.`birth`,
        ums_member.`email`
    </sql>

    <select id="getMemberByUserId" resultType="com.jackson0714.passjava.member.entity.MemberEntity">
        SELECT
        <include refid="memberSql"/>
        FROM ums_member as ums_member
        <where>
            <if test="userId != null">
                AND ums_member.`user_id` = #{userId}
            </if>
        </where>

    </select>


</mapper>